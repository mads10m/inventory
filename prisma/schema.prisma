generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum food_category {
  DRINKS
  SNACKS
}

model food_item {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  stock       Int
  unit        String
  threshold   Int
  orderAmount Int
  status      String?
  category    food_category
}
